{
  "expo": {
    "name": "FlashcardApp",
    "slug": "FlashcardApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "flashcardapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "name": "Flashcard Power", // PWA name (shows in install prompt)
      "shortName": "Flashcards", // PWA short name (for home screen icon label)
      "description": "A simple and effective flashcard app for exam preparation.",
      "lang": "en-US",
      "themeColor": "#007AFF", // Browser toolbar color (match your Colors.primary)
      "backgroundColor": "#F2F2F7", // Background color for the PWA splash screen (match Colors.background)
      "display": "standalone", // Makes it feel like a native app (standalone, fullscreen, minimal-ui)
      "orientation": "portrait",
      "bundler": "metro", // Ensure this is metro for Expo Router
      "output": "static", // For static hosting on Vercel/Netlify
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": ["expo-router"],
    "experiments": {
      "typedRoutes": true
    }
  }
}
